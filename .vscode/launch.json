{
    "version": "0.2.0",
    "configurations": [
    {
      "name": "Debug with Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
      {
        "command": "npm run dev",
        "name": "Debug backend",
        "request": "launch",
        "type": "node-terminal",
        "cwd": "${workspaceFolder}/backend"
      },
      {
        "command": "npm run start",
        "name": "Start frontend",
        "request": "launch",
        "type": "node-terminal",
        "cwd": "${workspaceFolder}/frontend"
      },
    ]
  }
  